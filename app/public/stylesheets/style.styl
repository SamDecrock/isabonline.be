offwhite = #F7F7F4
offblack = #333333

*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Roboto', sans-serif
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	position relative

html, body
	width 100%
	height 100%

body
	background-color offwhite
	position relative
	color offblack
	font-size 16px
	text-align center

a
	color inherit
	margin 0
	padding 0

.link
	text-decoration underline
.link:hover
	text-decoration none


.online, .offline
	font-size 22px
	display none

.error
	background-color black
	color green
	font-size 16px
	padding 20px

.online
	color green

.me
	font-size 10px

.lastcheck, .openwebsite
	font-size 12px

// on smartphones:
@media screen and (max-width: 768px)
	body
		font-size 12px
